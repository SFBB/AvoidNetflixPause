{
  "manifest_version": 3,
  "name": "Avoid Netflix Pause",
  "version": "1.0",
  "description": "Simulate mouse event in Chrome to avoid Netflix pause",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
